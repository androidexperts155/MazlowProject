<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_marginStart="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="0dp"
        >
        <LinearLayout
            android:paddingStart="@dimen/_15sdp"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/img_icon"
                   android:layout_width="@dimen/_20sdp"
                   android:layout_height="@dimen/_20sdp"
                   tools:src="@drawable/ic_steps"
                   />
               <com.mazlow.customclasses.MediumTextView
                   android:id="@+id/txt_conming_soon"
                   tools:visibility="visible"
                   android:visibility="gone"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_15sdp"
                   android:text="@string/coming_soon"
                   android:gravity="center"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/_8sdp"
                   android:background="@drawable/rounded_bt_red" />
           </LinearLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

        <LinearLayout

            android:layout_weight="1"
            android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.mazlow.customclasses.LightTextView
                android:id="@+id/txt_title"
                android:gravity="center"
                tools:text="Steps upto"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
              <com.mazlow.customclasses.MediumTextView
                  android:id="@+id/txt_amount"
                  android:gravity="center"
                  tools:text="3000"
                  android:textColor="@color/textcolor"
                  android:textSize="@dimen/_12sdp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <com.mazlow.customclasses.LightTextView
                  android:id="@+id/txt_amount_txt"
                  android:gravity="center"
                  tools:text="mts"
                  android:textColor="@color/textcolor"
                  android:textSize="@dimen/_10sdp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>

            </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_12sdp"
                    android:src="@drawable/ic_forward"/>
            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>