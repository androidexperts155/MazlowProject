<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:attrs="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rd.PageIndicatorView
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_25sdp"
            android:id="@+id/pageIndicatorView"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            attrs:piv_selectedColor="@color/textcolor"
            android:layout_height="wrap_content"
            attrs:piv_unselectedColor="@color/gray_color"
            attrs:piv_padding="10dp"
            attrs:piv_radius="4dp" />

        <ImageView
            android:id="@+id/ic_close"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_18sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_width="@dimen/_25sdp"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_height="@dimen/_25sdp"></ImageView>

        <androidx.viewpager.widget.ViewPager
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_below="@+id/pageIndicatorView"
            android:id="@+id/viewPager"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </RelativeLayout>
</LinearLayout>