<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splashimg"
    android:orientation="vertical">


    <LinearLayout

        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mazlow.customclasses.BoldTextView
            android:textColor="@color/white"
            android:id="@+id/tv_title"
            android:textSize="@dimen/bigsize"
            android:layout_centerHorizontal="true"
            android:text="hell"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.mazlow.customclasses.MediumTextView
            android:textColor="@color/white"
            android:id="@+id/tv_message"
            android:text="hell"
            android:layout_marginTop="@dimen/margin10"
            android:layout_marginRight="@dimen/margin15"
            android:layout_marginLeft="@dimen/margin15"
            android:gravity="center"
            android:layout_below="@+id/tv_title"
            android:textSize="@dimen/TitleTexthightlight"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>




    </LinearLayout>

    <com.mazlow.customclasses.MediumButton
        android:id="@+id/btn_join"
        android:layout_marginTop="@dimen/margin15"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/_16sdp"
        android:background="@drawable/btn_shape"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:text="Join MashLife"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:paddingLeft="@dimen/_30sdp"
        android:paddingRight="@dimen/_30sdp"
        android:textAllCaps="false"
        android:layout_height="@dimen/_36sdp"/>


</RelativeLayout>