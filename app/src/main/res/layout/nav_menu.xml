<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_user"

            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/ic_user_avtar"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_nav_close"
            android:paddingTop="@dimen/_5sdp"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_close_blue"/>


    </LinearLayout>


    <com.mazlow.customclasses.MediumTextView
        android:padding="@dimen/_20sdp"
        android:gravity="left"
        android:text="Afternoon, Sonu"
        android:textColor="@color/textcolor"
        android:textSize="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

   <ScrollView
       android:layout_weight="1"
       android:fillViewport="true"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <com.mazlow.customclasses.LightTextView
               android:padding="@dimen/_12sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:gravity="left"
               android:text="Top up"
               android:textColor="@color/textcolor"
               android:textSize="@dimen/_15sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/text_light_gray"/>

           <com.mazlow.customclasses.LightTextView
               android:padding="@dimen/_12sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:gravity="left"
               android:text="Exchange"
               android:textColor="@color/textcolor"
               android:textSize="@dimen/_15sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/text_light_gray"/>

           <LinearLayout
               android:alpha="0.5"
               android:padding="@dimen/_12sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:orientation="horizontal">
               <com.mazlow.customclasses.LightTextView
                   android:gravity="left"
                   android:text="My Savings"
                   android:textColor="@color/textcolor"
                   android:textSize="@dimen/_15sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <com.mazlow.customclasses.LightTextView

                   android:visibility="visible"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/coming_soon"
                   android:paddingTop="@dimen/_2sdp"
                   android:paddingBottom="@dimen/_2sdp"
                   android:paddingStart="@dimen/_5sdp"
                   android:paddingEnd="@dimen/_5sdp"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/_8sdp"
                   android:background="@drawable/rounded_bt_red" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/text_light_gray"/>

           <LinearLayout
               android:alpha="0.5"
               android:padding="@dimen/_12sdp"
               android:layout_marginStart="@dimen/_10sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center_vertical"
               android:orientation="horizontal">
               <com.mazlow.customclasses.LightTextView
                   android:gravity="left"
                   android:text="Budgets"
                   android:textColor="@color/textcolor"
                   android:textSize="@dimen/_15sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <com.mazlow.customclasses.LightTextView

                   android:visibility="visible"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="@string/coming_soon"
                   android:paddingTop="@dimen/_2sdp"
                   android:paddingBottom="@dimen/_2sdp"
                   android:paddingStart="@dimen/_5sdp"
                   android:paddingEnd="@dimen/_5sdp"
                   android:textColor="@android:color/white"
                   android:textSize="@dimen/_8sdp"
                   android:background="@drawable/rounded_bt_red" />
           </LinearLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="@color/text_light_gray"/>


           <com.mazlow.customclasses.MediumTextView
               android:layout_marginTop="@dimen/_40sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:gravity="left"
               android:text="On-screen help"
               android:textColor="@color/textcolor"
               android:textSize="@dimen/_15sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <com.mazlow.customclasses.MediumTextView
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:gravity="left"
               android:text="Setting"
               android:textColor="@color/textcolor"
               android:textSize="@dimen/_15sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <com.mazlow.customclasses.MediumTextView
               android:layout_marginTop="@dimen/_20sdp"
               android:layout_marginStart="@dimen/_20sdp"
               android:gravity="left"
               android:text="Help"
               android:textColor="@color/textcolor"
               android:textSize="@dimen/_15sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>


       </LinearLayout>
   </ScrollView>

    <com.mazlow.customclasses.LightTextView
        android:padding="@dimen/_10sdp"

        android:gravity="left"
        android:text="MasLife v1.0.0"
        android:textColor="@color/text_light_gray"
        android:textSize="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>