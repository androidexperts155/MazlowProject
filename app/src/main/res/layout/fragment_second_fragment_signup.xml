<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.mazlow.customclasses.MediumTextView
                    android:layout_marginTop="@dimen/margin15"
                    android:id="@+id/lasttwodigits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"

                    android:text="What are your personal details?"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/countrty"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:singleLine="true"

                    android:layout_height="wrap_content">
                    <com.mazlow.customclasses.MediumEdittext
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/NormalTextSize"
                        android:maxLength="10"
                        android:textColorHint="@color/textcolor"
                        android:hint="@string/legal_first_name"
                        android:paddingBottom="@dimen/margin15"
                        android:id="@+id/et_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/margin10"
                    android:id="@+id/postal_code"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_height="wrap_content">
                    <com.mazlow.customclasses.MediumEdittext
                        android:textColor="@color/textcolor"
                        android:maxLength="10"
                        android:textSize="@dimen/NormalTextSize"
                        android:textColorHint="@color/textcolor"
                        android:hint="@string/legal_last_name"
                        android:paddingBottom="@dimen/margin15"
                        android:singleLine="true"
                        android:id="@+id/et_pstalcoe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/margin10"
                    android:id="@+id/street"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"                android:layout_height="wrap_content">
                    <com.mazlow.customclasses.MediumEdittext
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/NormalTextSize"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColorHint="@color/textcolor"
                        android:hint="@string/date_of_birth"
                        android:paddingBottom="@dimen/margin15"
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/margin10"
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_height="wrap_content">
                    <com.mazlow.customclasses.MediumEdittext
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/NormalTextSize"
                        android:maxLength="10"
                        android:textColorHint="@color/textcolor"
                        android:hint="@string/email_address"
                        android:paddingBottom="@dimen/margin15"
                        android:singleLine="true"
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_marginTop="@dimen/margin10"
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/margin15"
                    android:layout_marginRight="@dimen/margin15"
                    android:layout_height="wrap_content">
                    <com.mazlow.customclasses.MediumEdittext
                        android:textColor="@color/textcolor"
                        android:maxLength="10"
                        android:textSize="@dimen/NormalTextSize"
                        android:textColorHint="@color/textcolor"
                        android:hint="@string/re_enter_email_address"
                        android:paddingBottom="@dimen/margin15"
                        android:id="@+id/et_city"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <com.mazlow.customclasses.MediumButton

                    android:layout_gravity="center"
                    android:id="@+id/continue_btn"
                    android:background="@drawable/continue_btn"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/margin15"
                    android:paddingRight="40dp"
                    android:textAllCaps="false"
                    android:paddingLeft="40dp"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/textcolor"
                    android:text="Continue"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>