<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mazlow.payments_subscription.activities.SubscriptionFeatureList">

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
    
        <ImageView
            android:id="@+id/ic_close"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/_25sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_black_24dp"
            android:layout_height="@dimen/_25sdp"/>
    </LinearLayout>
    
    
    
    <com.mazlow.customclasses.MediumTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_17sdp"
        android:id="@+id/textViewTitle"
        android:textColor="@color/blue_color"
        android:gravity="center"
        android:textAllCaps="true"
        android:text="@string/standard"
        />
    
    <com.mazlow.customclasses.LightTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textViewDescription"
        android:layout_marginTop="@dimen/_4sdp"
        android:textSize="@dimen/_12sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_4sdp"
        android:textColor="@color/blue_color"
        android:text="@string/you_will_have_limited_access"
        />
    
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp" />
    
</LinearLayout>
